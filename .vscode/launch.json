{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SFML Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/sword_star.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${workspaceFolder}/library/SFML-3.0.2/bin;${workspaceFolder}/library/SFML-3.0.2/compiler/mingw64/bin;${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/library/SFML-3.0.2/compiler/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build SFML Project (Debug)"
        }
    ]
}
